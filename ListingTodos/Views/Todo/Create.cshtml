@model Todo
@{
    Layout = "_Layout";
    ViewBag.Title = "Add new todo";
}

<body>
    <div class="container theme-showcase" role="main">
        <div class="page-header">
            <div class="row">
                <h1>Add new todo</h1>
            </div>
        </div>
        <div class="container col-md-offset-3">
            <form asp-controller="Todo" asp-action="AddTodo" method="post">
                <div class="form-group">
                    <div class="col-md-3">
                        <input asp-for="Title" type="text" class="form-control" placeholder="Todo description" required>
                    </div>
                </div>
                    <br /><br />
                    <div class="form-group">
                        <div class="col-md-3">
                            <div class="checkbox">
                                <label>
                                    <input asp-for="IsUrgent" type="checkbox">Urgent
                                </label>
                            </div>
                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <div class="col-md-3">
                            <label asp-for="DueOn" class="control-label">Due on</label>
                            <input asp-for="DueOn" type="date" class="form-control"><br>
                        </div>
                    </div>
                    <br /><br /><br /><br />
                    @*<div class="col-md-3">
                            <select class="btn btn-default" required name="user">
                                <option value="" disabled selected hidden>Choose user to assign to</option>
                                @foreach (var user in Model.User)
                                {
                                <option value="@user.Id">@user.UserName</option>
                                }
                            </select>
                            <input type="checkbox" name="user" class="form-control" required>
                        </div>*@
                    <button type="submit" class="btn btn-success col-md-1">Add</button>               
            </form>
            <form asp-controller="Todo" asp-action="List" method="get">
                <button type="submit" class="btn btn-danger col-md-offset-2">Cancel</button>
            </form>
        </div>
    </div>
</body>
