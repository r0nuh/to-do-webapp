

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
    <title>Add todo</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <div class="container theme-showcase" role="main">
        <div class="page-header">
            <h1>Add new todo</h1>
        </div>
        <div class="container col-md-offset-3">
            <form action="/todo/add" method="post">
                <div class="form-group">
                    <div class="col-sm-3">
                        <input type="text" class="form-control" name="title" placeholder="Todo description" required>
                    </div>
                    <button type="submit" class="btn btn-default">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </button>
                    <br /><br />
                    <div class="form-group">
                        <div class="col-sm-3">
                            <label class="control-label">Due on</label>
                            <input type="date" class="form-control" name="dueon"><br>
                        </div>
                    </div>
                    <br /><br />
                    @*<div class="col-sm-3">
                        <select class="btn btn-default" required name="user">
                            <option value="" disabled selected hidden>Choose user to assign to</option>
                            @foreach (var user in Model.User)
                            {
                            <option value="@user.Id">@user.UserName</option>
                            }
                        </select>
                        <input type="checkbox" name="user" class="form-control" required>
                    </div>*@
                </div>
            </form><br /><br />
            <form action="/todo/list/{username}" method="get">
                <button type="submit" class="btn btn-primary">Cancel</button>
            </form>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>