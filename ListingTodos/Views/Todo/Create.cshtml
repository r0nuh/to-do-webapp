@{
    Layout = "_Layout";
    ViewBag.Title = "Add new todo";
}

<body>
    <div class="container theme-showcase" role="main">
        <div class="page-header">
            <div class="row">
                <h1>Add new todo</h1>
            </div>
        </div>
        <div class="container col-md-offset-3">
            <form action="/todo/add" method="post">
                <div class="form-group">
                    <div class="col-sm-3">
                        <input type="text" class="form-control" name="title" placeholder="Todo description" required>
                    </div>
                    <button type="submit" class="btn btn-default">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </button>
                    <br /><br />
                    <div class="form-group">
                        <div class="col-sm-3">
                            <label class="control-label">Due on</label>
                            <input type="date" class="form-control" name="dueon"><br>
                        </div>
                    </div>
                    <br /><br />
                    @*<div class="col-sm-3">
                            <select class="btn btn-default" required name="user">
                                <option value="" disabled selected hidden>Choose user to assign to</option>
                                @foreach (var user in Model.User)
                                {
                                <option value="@user.Id">@user.UserName</option>
                                }
                            </select>
                            <input type="checkbox" name="user" class="form-control" required>
                        </div>*@
                </div>
            </form><br /><br />
            <form action="/todo/list/" method="get">
                <button type="submit" class="btn btn-primary">Cancel</button>
            </form>
        </div>
    </div>
</body>
