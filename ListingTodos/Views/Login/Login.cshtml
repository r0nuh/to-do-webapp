@model User

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
</head>
<body>
    <div class="container theme-showcase" role="main">
        <div class="page-header">
            <h2>Login</h2>
        </div>
        <form class="form-inline" asp-controller="Login" asp-action="Login" method="post">
            <div class="form-group">
                <label class="sr-only" asp-for="UserName">Username</label>
                <div class="col-md-1">
                    <input class="form-control" asp-for="UserName" type="text" placeholder="Username" required autofocus />
                </div>
            </div>
            <div class="form-group">
                <label class="sr-only" for="InputPassword">Password</label>
                <div class="col-md-2">
                    <input class="form-control" type="text" id="InputPassword" name="Password" placeholder="Password" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <button class="btn btn-primary" type="submit">Login</button>
                </div>
            </div>
        </form>
        <br /><br/>
        <form asp-controller="Login" asp-action="Register" method="get">
            <div class="col-md-1">
                <button class="btn btn-warning" type="submit">Register</button>
            </div>
        </form>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>